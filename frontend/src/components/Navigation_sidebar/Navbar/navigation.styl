#navbar {
  float: right;
  width: 85%;
  height: 55px;
  background-color: #2c2c2c;
  font-size: 0.7em;
  padding: 8px 20px;
  font-weight: lighter;
  color: #EC9C34;
  border-bottom: 4px solid #EC9C34;
  display: flex;
  justify-content: space-between;
}

#navbar h1 {
  margin-top: 7px;
}

#nav-rubrique ul {
  display: flex;
  flex-direction: row;
}

#nav-rubrique ul li {
  text-align: right;
  display: flex;
  flex-direction: column;
  font-size: 0.8em;
  margin-left: 20px;
}

#nav-rubrique ul li :hover {
  color: #f3b972;
}

.nav-fig {
  margin: auto;
  font-size: 1.5em;
}

.titles {
  margin-top: 7px;
}

.titles a {
  margin-right: 10px;
}

.showInformations {
  margin: auto;
  width: 400px;
  text-align: center;
  padding: 10px;
  background-color: #2c2c2c;
  box-shadow: 0px 0px 10px 7px black;
  position: relative;
  top: 30px;
  z-index: 100;
}

.showInformations ul {
  display: flex;
  justify-content: space-around;
}

.createOneAnnounceAndPost {
  background-color: #2c2c2c;
  position: relative;
  top: 37px;
  box-shadow: 0px 0px 5px 7px black;
  padding: 10px 54px 10px 0px;
  z-index: 101;
}

.createAnnounce
  &-textarea
    width: 100%;
    height: 300px;
    margin-top: 10px;
  &-button
    padding: 10px;
    border: none;
    margin-top: 10px;
    border-radius: 4px;
