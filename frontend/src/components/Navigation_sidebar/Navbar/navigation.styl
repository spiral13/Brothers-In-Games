@require "frontend/styles/charte";

#navbar 
  position: sticky;
  top: 0px;
  z-index: 100;
  height: 55px;
  background-color: $second-color;
  font-size: 0.7em;
  font-weight: lighter;
  color: $main-color;
  border-bottom: 4px solid $main-color;
  display: flex;
  justify-content: space-between;
  h1 
    margin-top: 7px;

#nav-rubrique 
  > ul 
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
  ul li 
    height: 100%;
  ul li a
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 0.8em;
    padding: 7px 15px;
  ul li a:hover
    background-color: $second-hover-color;
  ul li :hover 
    color: $main-hover-color;

.titles 
  font-weight: normal;
  display: flex;
  flex-direction: row;
  height: 100%;
  a
    display: flex;
    align-items: center;
    height: 100%;
    font-size: 0.8em;
    padding: 0 15px;
  a:hover
    background-color: $second-hover-color;

.showInformations 
  background-color: $second-color;
  box-shadow: 0px 0px 5px black;
  width: 100%;
  position: absolute;
  top: 55px;
  left: 0;
  ul 
    display: flex;
    flex-direction: row;
    justify-content: flex-end;

.nav-fig 
  margin: auto;
  font-size: 1.5em;

@media (max-width: 1200px)
  #navbar 
    display: none;