#navbar {
  float: right;
  width: 85%;
  height: 55px;
  background-color: #2c2c2c;
  font-size: 0.7em;
  padding: 8px 20px;
  font-weight: lighter;
  color: #EC9C34;
  border-bottom: 4px solid #EC9C34;
  display: flex;
  justify-content: space-between;
}

#navbar h1 {
  margin-top: 7px;
}

#nav-rubrique ul {
  display: flex;
  flex-direction: row;
}

#nav-rubrique ul li {
  text-align: right;
  display: flex;
  flex-direction: column;
  font-size: 0.8em;
  margin-left: 20px;
}

#nav-rubrique ul li :hover {
  color: #f3b972;
}

.nav-fig {
  margin: auto;
  font-size: 1.5em;
}
