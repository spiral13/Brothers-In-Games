@require "frontend/styles/charte";

#navbar
  position: sticky;
  top: 0px;
  z-index: 400;
  min-height: 55px;
  background-color: $second-color;
  font-size: 0.7em;
  font-weight: lighter;
  color: $main-color;
  border-bottom: 4px solid $main-color;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  h1
    margin-top: 7px;

#nav-rubrique
  > ul
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
  ul li
    height: 100%;
  ul li a
    cursor: pointer;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 0.8em;
    padding: 7px 15px;
  ul li a:hover
    background-color: $second-hover-color;
  ul li :hover
    color: $main-hover-color;
  svg
    flex: 1 0 auto;

.titles
  font-weight: normal;
  display: flex;
  flex-direction: row;
  height: 100%;
  a
    cursor: pointer;
    display: flex;
    align-items: center;
    height: 100%;
    font-size: 0.8em;
    padding: 0 15px;
  a:hover
    background-color: $second-hover-color;

.showInformations
  background-color: $second-color;
  box-shadow: 0px 0px 5px black;
  width: 100%;
  position: absolute;
  top: 55px;
  left: 0;
  ul
    height: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
  ul li
    cursor: pointer;
    height: 100%;
  ul li a
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 0.8em;
    padding: 7px 15px;
  ul li a:hover
    background-color: $second-hover-color;
  ul li :hover
    color: $main-hover-color;

.nav-fig
  margin: auto;
  font-size: 1.5em;

.createOneAnnounceAndPost
  background-color: rgba(0,0,0,0.6);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 500;
  display: flex;
  form
    margin: auto;
    fieldset
      display: flex;
      flex-direction: column;
      background-color: $second-color;
      width: 600px;
      padding: 20px;
      font-size: 0.5em;
      legend
        font-size: 1.5em;
        color: $main-color;

  .createOneAnnounceAndPost::before
    background-color: rgba(0,0,0,0.6);
    width: 100%;
    height: 100%;


.createAnnounce
  &-textarea
    width: 100%;
    height: 100px;
    margin-top: 10px;
  &-wrap
    margin-top: 10px;
    width: 100%;
    display: flex;
  &-button
    flex: 1;
    border: none;
    height: 30px;
    background-color: $second-color;
    color: $main-color;
    border: 1px solid $main-color;
  &-button:first-child
    border-right: none;
  &-button:hover
    transition: 0.2s
    background-color: $main-color;
    color: $second-color;

@media screen and (max-width: 650px) {
  .titles {
    font-size: 0.8em;
  }
  #nav-rubrique {
    height: 20px;
  }
  #nav-rubrique ul li {
    height: 50%;
  }
}
