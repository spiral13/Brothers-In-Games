@require "frontend/styles/charte";

#sidebar
  &-title
    display: flex;
    flex-direction: row;
    justify-content: center; 
    font-size: 1.7em;
    font-weight: bold;
    color: $second-color;
    i
      font-size: 0.7em;
      position: relative;
      left: 5px;
    span
      font-size: 1.1em;
      position: relative;
      top: -19px;
      left: 30px;
  &-username
    padding: 10px;
    text-align: center;
  &-form
    font-size: 0.7em;
    margin: -2px;
    width: 100%;
    padding: 10px;
    button
      padding: 6px;
      border: none;
      box-shadow: 0px 0px 1px 1px black;
      background-color: #2c2c2c;
      color: #ec9c34;
  &-label
    margin: 0px;


#sidebar {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-width: 280px;
  background-color: $main-color;
}

#flexForm {
  display: flex;
  flex-direction: row;
}
