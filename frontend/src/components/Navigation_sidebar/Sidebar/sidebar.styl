@require "frontend/styles/charte";

#sidebar
  z-index: 500;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-height: 100vh;
  min-width: 280px;
  max-width: 280px;
  background-color: $main-color;
  &-wrap 
    position: sticky;
    top: 0px;
    z-index: 100;
  &-title
    display: flex;
    flex-direction: row;
    justify-content: center; 
    font-size: 1.7em;
    font-weight: bold;
    color: $second-color;
    padding: 15px 0;
    a
      letter-spacing: -0.06em;
      line-height: 27px;
    i
      font-size: 0.7em;
    span
      margin-left: 20px;
      font-size: 1.1em;
  &-username
    padding: 10px;
    text-align: center;
  &-form
    font-size: 0.7em;
    padding: 10px;
    display: flex;
    flex-direction: column;
    width: 100%;
  &-form-wrap
    margin: 10px 0 0 0;
    display: flex;
    flex-direction: row;
    button
      display: flex;
      font-size: 1em;
      padding: 6px 10px;
      border: none;
      background-color: $second-color;
      color: $main-color;
      border-radius: 0 5px 5px 0;
    button:hover
      background-color: $second-hover-color;
      align-items: center;
  &-label
      align-self: flex-start;
      font-size: 0.8em;
      
.selectNavGame
  flex: 1;
  font-size: 0.5em;
  > div
    border-radius: 5px 0 0 5px;
  > div:focus
    border-color: black;
    box-shadow: none;
    
@media (max-width: 1200px)
  #sidebar
    display: none;