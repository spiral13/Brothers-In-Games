@require "frontend/styles/charte";

#sidebar
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  min-width: 280px;
  max-width: 280px;
  background-color: $main-color;
  &-title
    display: flex;
    flex-direction: row;
    justify-content: center; 
    font-size: 1.7em;
    font-weight: bold;
    color: $second-color;
    padding: 15px 0;
    a
      letter-spacing: -0.06em;
      line-height: 27px;
    i
      font-size: 0.7em;
    span
      margin-left: 20px;
      font-size: 1.1em;
  &-username
    padding: 10px;
    text-align: center;
  &-form
    font-size: 0.7em;
    padding: 10px;
    display: flex;
    flex-direction: column;
    width: 100%;
  &-form-wrap
    margin: 10px 0 0 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    label
      align-self: flex-start;
    input
      flex: 1;
      border-radius: 10px 0 0 10px;
      padding: 7px;
      height: 35px;
      border: none;
    input:focus, input:hover
      transition: 0.2s;
      box-shadow: 0 0 5px #ffffff;
    button
      font-size: 1em;
      padding: 6px 10px;
      border: none;
      background-color: $second-color;
      height: 35px;
      color: $main-color;
      border-radius: 0 10px 10px 0;
    button:hover
      background-color: $second-hover-color;
