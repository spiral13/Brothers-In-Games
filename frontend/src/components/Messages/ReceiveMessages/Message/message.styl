.ReceivedMessage {
  width: 100%;
  height: 32px;
  font-size: 0.8em;
}

.ReceivedMessage a h2 {
  width: 15%;
  float: left;
  padding: 5px;
  background-color: #333333;
  box-shadow: 0px 0px 2px 2px black;
}

.ReceivedMessage a p {
  width: 85%;
  float: left;
  padding: 5px;
  background-color: #333333;
  box-shadow: 0px 0px 2px 2px black;
  overflow: hidden;
}

.ReceivedMessage a:hover {
  color: #ec9c34;
}
