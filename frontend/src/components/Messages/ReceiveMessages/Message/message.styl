@require "frontend/styles/charte";
.MainMessages
  .ReceivedMessage
    width: 100%;
    border-top: 1px solid $main-color;
    box-shadow: 0 5 10px black;
    background-color: $second-color;
    margin: auto;
    height: 32px;
    font-size: 0.7em;
    tr
      font-size: 0.8em;
      td
        a
          padding: 5px 15px;
          display: block;
    thead
      border-top: 1px solid black;
      background-color: $main-color;
      color: $second-color;
      tr   
        display: grid;
        grid-template-columns: 300px 1fr;
        border-bottom: 2px solid black;
        td
          padding: 5px 15px;
        td:first-child
          border-right: 1px solid $second-color;
    tbody      
      tr
        display: grid;
        grid-template-columns: 300px 1fr;
        background-color: $second-color;
        border-bottom: 2px solid black;
        color: #ffffff;
        td
          font-size: 0.9em;
          font-weight: lighter;
        td:first-child
          border-right: 1px solid #000000;
      tr:hover 
        cursor: pointer;
        background-color: $second-hover-color;
        
@media (max-width: 768px)
  td:first-child
    display: none;