#main-member {
  width: 70%;
  float: left;
  margin-left: 15%;
  background-color: #2c2c2c;
  color: white;
  font-weight: lighter;
  font-size: 0.7em;
  display: flex;
  flex-wrap: wrap;
}

.content-new {
  height: 322px;
  margin: 7px;
  box-shadow: 0px 0px 2px 2px black;
}

.content-new:hover {
  box-shadow: 0px 0px 2px 2px #ec9c34;
  cursor: pointer;
}
