@require "frontend/styles/charte";

#main-member
  padding: 5px;
  flex: 1;
  background-color: $second-color;
  color: white;
  font-weight: normal;
  font-size: 0.5em;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  grid-gap: 5px;
  align-content: start;
  a
    position: relative;
    height: 250px;
    display: block;
    border: 2px solid black;
  a:hover::before
    content: '';
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    background-color: #ffffff;
    opacity: 0.2;
    cursor: pointer;
    z-index: 100;
.content-new
  position: relative;
  height: 100%;
  img
    width: 100%;

#main-member .fake
    flex: 1 0 auto;
    align-self: stretch;
    width: 430px;

.presentation
  position: absolute;
  opacity: 0.7;
  width: 100%;
  bottom: 0;
  background-color: #000000;
  padding: 10px;
