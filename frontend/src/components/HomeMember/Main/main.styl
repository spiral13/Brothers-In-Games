@require "frontend/styles/charte";

#main-member
  padding: 5px;
  flex: 1;
  background-color: $second-color;
  color: white;
  font-weight: normal;
  font-size: 0.5em;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: flex-start;
  a
    position: relative;
    flex: 1;
    min-width: 430px;
    display: block;
    margin: 5px 2px;
    border: 2px solid black;
  a:hover::before
    content: '';
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    background-color: #ffffff;
    opacity: 0.2;
    cursor: pointer;
    z-index: 100;
    
.content-new
  position: relative;
  height: 100%;
  img
    width: 100%;

.presentation
  position: absolute;
  opacity: 0.7;
  width: 100%;
  bottom: 0;
  background-color: #000000;
  padding: 10px;
