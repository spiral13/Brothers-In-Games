@require "frontend/styles/charte";
  
.lastActu
  border-left: 3px solid #EC9C34;
  border-radius: 1px 0 0 1px;
  margin-left: 5px;
  box-shadow: 0px 0px 2px 2px black;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 40px;
  a
    opacity: 0.8;
    line-height: 40px;
    background-color: rgba(0, 0, 0, 0.7); 
    display: block;
    height: 100%;
    flex: 1;
    padding: 0 30px 0 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 0.55em;
    color: white;
    padding-left: 5px;
  a:hover
    background-color: rgba(0, 0, 0, 0.3);

.navbarRange-title 
  font-size: 0.9em;
