header {
  background-color: #EC9C34;
}

header h1 {
  font-size: 4em;
  font-weight: bold;
  margin-top: 20px;
  margin-left: 150px;
}

header h1 span {
  margin-left: 50px;
  position: relative;
  top: -45px;
  left: 30px;
}

header h1 span i {
  font-size: 0.7em;
  position: relative;
  left: 5px;
}

.login_signin {
  font-size: 1.2em;
  font-weight: bold;
  margin-top: 100px;
  margin-left: 80px;
  display: block;
}

.ajust {
  margin-top: 40px;
}

label, input, button {
  display: block;
}

form label, form a  {
  margin: 25px 0 0 30px;
}

#head_nav {
  padding: 30px;
  position: fixed;
  right: 20px;
  top: 30px;
  text-align: center;
  box-shadow:  2px 2px 5px 2px black;
  opacity: 0.7;
  line-height: 1.3em;
  background-color: black;
  z-index: 3;
  color: #EC9C34;
  font-weight: bold;
}

#leftSide {
  width: 500px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  background-color: #EC9C34;
}

.gamesList {
  display: block;
}


form {
  margin: 20px 0 10px 60px;
  width: 500px;
}

input {
  margin: 10px 0 10px 0;
  width: 85%;
  border-radius: 10px;
  padding: 7px;
  height: 35px;
  border: none;
}

#forgotPassword {
  font-size: 0.7em;
  margin-top: -5px;
  display: block;
  margin-left: 30px;
}

.underplace {
  clear: both;
  text-align: center;
  background-color: #EC9C34;
  position: relative;
  z-index: 4;
}

#tom_clancy {
  float: right;
  z-index: 0;
  display: block;
  height: 980px;
  width: 80%;
  // background-image: url("../pictures/tom_clancy.png");
  background: linear-gradient(
  rgba(0, 0, 0, 0.2),
  rgba(0, 0, 0, 0.2)
  ), url("../pictures/tom_clancy.png");
  background-repeat: no-repeat;
  background-size: cover;
  background-position-x: 40px;
}



#left_angle {
  position: absolute;
  top: 200px;
  left: -180px;
  width: 1400px;
  height: 400px;
  background-color: #EC9C34;
  z-index: 1;
  transform: rotate(-64deg);
  box-shadow: 0px 10px 10px -5px black;
}

