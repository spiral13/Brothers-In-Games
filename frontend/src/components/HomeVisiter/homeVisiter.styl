header {
  background-color: #EC9C34;
}

header h1 {
  font-size: 4em;
  font-weight: bold;
  margin-top: 20px;
  margin-left: 150px;
  color: #2C2C2C;
}

header h1 span {
  margin-left: 50px;
  position: relative;
  top: -45px;
  left: 30px;
}

header h1 span i {
  font-size: 0.7em;
  position: relative;
  left: 5px;
}

.login_signin {
  font-size: 1.2em;
  font-weight: bold;
  margin-top: 100px;
  margin-left: 80px;
  color: #2C2C2C;
}

.ajust {
  margin-top: 40px;
}

label, input, button {
  color: #2C2C2C;
}

label {
  margin-left: 10px;
  align-self: left;
}

form {
  display: flex;
  flex-direction: column;
}

form label{
  margin-top: 25px;
}

#head_nav {
  padding: 30px;
  position: fixed;
  right: 20px;
  top: 30px;
  text-align: center;
  box-shadow:  2px 2px 5px 2px black;
  opacity: 0.7;
  line-height: 1.3em;
  background-color: black;
  z-index: 3;
  color: #EC9C34;
  font-weight: bold;
}

#leftSide {
  width: 500px;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 50;
  background-color: #EC9C34;
}

header::before {
  content: '';
  width: 700px;
  height: 100vh;
  transform: skew(-20deg); 
  position: absolute;
  top: 0;
  z-index: auto;
  background-color: #EC9C34;
  box-shadow: 4px 0px 9px 0px rgba(0,0,0,0.58);
}

#leftSide .signup {
  align-self: left;
  padding: 10px;
  padding-top: 5px;
  font-size: 1.1em;
  background-color: #2C2C2C;
  border-radius: 3px;
  color: #EC9C34;
  margin: 5px 0 0 60px;
  border: initial;
}

#leftSide .signup:hover {
  transition: 0.2s;
  box-shadow: 0 0 5px #000000;
  background-color: #000000;
}

.gamesList {
  display: block;
}


form {
  margin: 20px 0 10px 60px;
  width: 400px;
}

input {
  margin: 10px 0 0 0;
  border-radius: 10px;
  padding: 7px;
  height: 35px;
  border: none;
}

input:hover {
  transition: 0.2s;
  box-shadow: 0 0 5px #ffffff;
}

#forgotPassword {
  color: #2C2C2C;
  font-size: 0.6em;
  margin-top: 10px;
  margin-left: 30px;
  align-self: left;
}

#forgotPassword:hover {
  color: #000000;
  text-decoration: underline;
}

.underplace {
  position: relative;
  z-index: 45;
  height: 100vh;
  clear: both;
  text-align: center;
  background-color: #EC9C34;
}

#tom_clancy {
  float: right;
  z-index: 0;
  display: block;
  height: 100vh;
  width: 80%;
  // background-image: url("../pictures/tom_clancy.png");
  background: linear-gradient(
  rgba(0, 0, 0, 0.2),
  rgba(0, 0, 0, 0.2)
  ), url("../pictures/tom_clancy.png");
  background-repeat: no-repeat;
  background-size: cover;
  background-position-x: 40px;
}



