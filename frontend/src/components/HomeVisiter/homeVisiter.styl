@require "frontend/styles/charte";

header 
  display: flex;
  overflow: hidden;
  background-image: url("../pictures/tom_clancy.png");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 300px;
  min-height: 100vh;
  max-width: 100vw;
  h1 
    font-size: 4em;
    font-weight: bold;
    margin-top: 20px;
    margin-left: 150px;
    color: $second-color;
    span 
      margin-left: 50px;
      position: relative;
      top: -45px;
      left: 30px;
      i 
        font-size: 0.7em;
        position: relative;
        left: 5px;

#angle 
  display: flex;
  width: 700px;
  min-height: 100vh;
  transform: skew(-20deg); 
  background-color: $main-color;
  box-shadow: 4px 0px 9px 0px rgba(0,0,0,0.58);
  #leftSide  
    padding: 0 0 10px 0;
    transform: skew(20deg);
    width: 500px;
    min-height: 100vh;
    z-index: 50;
    background-color: $main-color;
    display: flex;
    flex-direction:column;
    .signup 
      align-self: flex-start;
      padding: 10px;
      font-size: 1.1em;
      background-color: $second-color;
      border-radius: 3px;
      color: $main-color;
      margin: 5px 0 0 60px;
      border: initial;
    .signup:hover 
      transition: 0.2s;
      box-shadow: 0 0 5px #000000;
      background-color: #000000;
    .login_signin 
      font-size: 1.2em;
      font-weight: bold;
      margin-top: 10px;
      margin-left: 80px;
      color: $second-color;

.ajust 
  margin-top: 40px;

#homeVisiter
  form 
    display: flex;
    flex-direction: column;
    margin: 20px 0 10px 60px;
    width: 400px;
    label, input 
      color: $second-color;
    button 
      color: $main-color;
    label 
      margin-top: 25px;
      margin-left: 10px;
      align-self: left;
    input 
      flex: 1;
      margin: 10px 0 0 0;
      border-radius: 10px;
      padding: 7px;
      height: 35px;
      border: none;
    input:hover, input:focus 
      transition: 0.2s;
      box-shadow: 0 0 5px #ffffff;

#head_nav 
  padding: 30px;
  position: fixed;
  right: 20px;
  top: 30px;
  text-align: center;
  box-shadow:  2px 2px 5px 2px black;
  opacity: 0.7;
  line-height: 1.3em;
  background-color: black;
  z-index: 3;
  color: $main-color;
  font-weight: bold;

.gamesList 
  display: block;

#forgotPassword 
  color: $second-color;
  font-size: 0.6em;
  margin-top: 10px;
  margin-left: 30px;
  align-self: left;

#forgotPassword:hover 
  color: #000000;
  text-decoration: underline;
  
@media (max-width: 768px)
  header
    overflow: auto;
  #angle 
    width: 100vw;
    transform: unset;
    #leftSide
      flex: 1;
      transform: unset;
      display: flex;
      flex-direction: column;
      align-items: center;
      h1 
        display: flex;
        flex-direction: column;
        align-items: center;
        font-size: 1.5em;
        margin-top: 3px;
        margin-left: 0;
        span 
          position: static;
          margin-left: 0;
          i 
            position: static;
      form 
        margin: 0;
        width: 70%;
      button 
        align-self: stretch;
      .login_signin 
        border-top: 1px solid black;
        margin-top: 10px;
        margin-left: 0;
      .signup 
        width: 70%
        align-self: center;
        margin: 5px 0 0 0px;