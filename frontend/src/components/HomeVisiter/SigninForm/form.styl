#buttonSubmit {
  align-self: left;
  padding: 10px;
  padding-top: 5px;
  font-size: 1.1em;
  border: initial;
  background-color: #2C2C2C;
  border-radius: 3px;
  color: #EC9C34;
  margin-top: 50px;
}

#buttonSubmit:hover {
  transition: 0.2s;
  box-shadow: 0 0 5px #000000;
  background-color: #000000;
}

.error {
  border: 2px solid red;
}

.agreed {
  border: 2px solid green;
}
