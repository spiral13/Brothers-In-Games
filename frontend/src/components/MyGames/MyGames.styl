#ContainerMyGamesList
  width: 85%
  float: right
  height: 100%
  display: flex
  flex-direction: column
  padding: 1em 2em
  overflow: auto;

// Profile
#infoIdentityProfile
  width: 500px
  height:75px
  display:flex
  flex-direction: row
  align-items: center;
  background-color: #353232
  border-radius: 50px
  border: .5px solid #EC9C34

#photoProfileOnMyGames
  width: 50px
  height: 50px
  border-radius: 100%
  margin-left: 1em

#profileNameOnMyGames
  padding-left: 1em
  color: white
  font-weight: lighter
  font-size: 0.8em

// Section Liste
#sectionListingMyGames
  width:100%
  padding: 2em 0

#settings
  border-bottom: .5px solid #EC9C34
  width:50vw
  padding-bottom: .5em
  display: flex;
  flex-direction: row
  align-items: center


#trigger
  width: 45px
  height: 45px
  font-size: 1.8em
  background-color: black
  border-radius: 10px
  color: #EC9C34
  text-align: center
  padding-bottom: 50px
  margin-left: 20px

#trigger:hover{
  box-shadow: 0px 0px 2px 2px #ec9c34;
  cursor: pointer;
}


#triggerLegend
  color: white
  font-weight: lighter
  font-size: 0.5em
  padding-left: 1em
  padding-top: 5px
  margin-left: 485px

#title
  color: #EC9C34
  width: 150px



// Section liste - zone formulaire ajouter
#triggeredAddOneGameForm
  padding-bottom 1em

