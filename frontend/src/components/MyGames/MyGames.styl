#addOneGameForm
  padding: .5em 0
  width:50vw
  margin: 0
  border-bottom: .5px solid #EC9C34

#inputaddOneGameForm
  font-size: 0.6em
  border-color: black

#inputaddOneGameForm:hover{
  box-shadow: 0px 0px 2px 2px #ec9c34
}

// SectionListe: zone games
#containerAllMyGames
  width: 100%
  height: 100%
  display: flex
  padding: .5em
  flex-wrap: wrap
  justify-content: flex-start


#oneOfMyGame
  width: 200px
  margin: 0 1em
  height: 280px
  display: flex
  flex-direction: column
  justify-content: flex-start
  border-radius: 5px
  border: 2px solid black
  box-shadow: 0px 10px 10px -5px black
  margin-bottom: 1em

#oneOfMyGame:hover{
  box-shadow: 0px 0px 2px 2px #ec9c34;
  cursor: pointer;
}


#oneOfMyGamePicture
  width: 100%
  height: 60%

#oneOfMyGamePicture:hover{
  box-shadow: none;
  cursor: pointer;
}

#oneOfMyGameTitle
  font-size: 0.5em;
  padding: 15px 0
  text-align: center
  text-transform: uppercase
  color: white
  font-weight: bold

#oneOfMyGameTitle:hover{
  box-shadow: none;
  cursor: pointer;
}
