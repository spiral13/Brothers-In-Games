// SectionListe: zone games
#containerAllMyGames
  width: 100%
  height: 100%
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
  grid-gap: 10px;
  align-content: start;
  padding: 5px 0;

@media (max-width: 768px)
  #ContainerMyGamesList
    padding: 5px 5px 5px 5px;
  #settings
    width:100%;
    .trigger
      height: 50px;
    #addTrigger, #deleteTrigger
      font-size: 1em;
      padding-bottom: 0px;
      height: auto;