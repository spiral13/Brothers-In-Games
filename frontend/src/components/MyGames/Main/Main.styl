#ContainerMyGamesList
  height: 100%
  display: flex
  flex-direction: column
  padding: 15px

#ContainerMyGamesList .true
    background-color: black
    opacity: 0.5


  font-size: 0.8em

// Section Liste
#sectionListingMyGames
  width:100%
  padding: 0.5em 0

#settings
  border-bottom: .5px solid #EC9C34
  padding-bottom: .5em
  display: flex;
  flex-direction: row
  flex-wrap: wrap;
  align-items: center

.trigger
  margin-right: 10px;
  display: flex;
  justify-content: flex-start
  flex-direction: row
  align-items: center



#addTrigger
  width: 45px
  height: 45px
  font-size: 1.8em
  border-radius: 10px
  color: #EC9C34
  text-align: center
  padding-bottom: 60px
  padding-right: 30px
  margin-left: 10px


#addTrigger:hover{
  color: black
  cursor: pointer
}

#deleteTrigger
  width: 45px
  height: 45px
  font-size: 1.8em
  border-radius: 10px
  color: #EC9C34
  text-align: center
  padding-bottom: 60px
  margin-left: 10px

#deleteTrigger:hover{
  color: black
  cursor: pointer
}


.triggerLegend
  color: white
  font-weight: lighter
  font-size: 0.5em
  padding-top: 5px


#title
  color: #EC9C34
  width: 150px



// Section liste - zone formulaire ajouter
