#oneOfMyGame
  width: 200px;
  margin: 0 1em;
  height: 280px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border-radius: 5px;
  border: 2px solid black;
  box-shadow: 0px 10px 10px -5px black;
  margin-bottom: 1em;

#oneOfMyGame:hover
  box-shadow: 0px 0px 2px 2px #ec9c34;
  cursor: pointer;



#oneOfMyGamePicture
  width: 100%;
  height: 60%;

#oneOfMyGamePicture:hover
  box-shadow: none;
  cursor: pointer;


#oneOfMyGameTitle
  font-size: 0.5em;
  padding: 15px 0;
  text-align: center;
  text-transform: uppercase;
  color: white;
  font-weight: bold;

#oneOfMyGameTitle:hover
  box-shadow: none;
  cursor: pointer;

