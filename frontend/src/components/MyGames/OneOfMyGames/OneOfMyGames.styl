#oneOfMyGame
  display: flex;
  flex-direction: column;
  border-radius: 5px;
  border: 2px solid black;
  box-shadow: 0px 10px 10px -5px black;
  margin-bottom: 1em;
  width: 100%;
  height: 150px;
  &-wrap
    flex: 1;
    overflow: hidden;
    img
      width: 100%;
    img:hover
      box-shadow: none;
      cursor: pointer;
  &-info
      padding: 5px;
      color: white;
      text-align: center
      font-weight: lighter
      color: $main-color
  &-info:hover
      box-shadow: none;
      cursor: pointer;
  &-title
    font-size: 0.3em;
    padding: 5px 0;
    text-align: center;
    text-transform: uppercase;
    color: white;
    font-weight: normal;
  &-title:hover
    box-shadow: none;
    cursor: pointer;

#oneOfMyGame:hover
  box-shadow: 0px 0px 2px 2px #ec9c34;
  cursor: pointer;




