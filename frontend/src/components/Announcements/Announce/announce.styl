#list_announce {
  clear:both;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  // height: 76vh;
}

.announce {
  width: 28%;
  margin: 20px 0;
  box-shadow: 0px 0px 10px 5px black;
  background-color: #2c2c2c;
  color : white;
}

.announce a {
  padding: 10px;
  display: flex;
  flex-direction: row;
}

.player-announce {
  padding: 4px;
  height: 80px;
  font-weight: lighter;
  display: flex;
  flex-direction: column;
  font-size: 0.6em;
  justify-content: space-between;
  margin-left: 5px;
}

.announce:hover {
  background-color: #2C2C3F;
}

.player-image {
  height: 100px;
}

.player-name {
  font-weight: 400;
  margin-top: 10px;
  margin-bottom: 10px;
}

.green {
  color: green;
}

.contentContain {
  overflow: hidden;
  opacity: 0.5;
}
