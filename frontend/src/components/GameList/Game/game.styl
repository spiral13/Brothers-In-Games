@require "frontend/styles/charte";

#games 
  a
    flex: 1 0 auto;
    align-self: stretch;
    display: block;
    width: 150px;
    margin: 10px;
    border: 2px solid black;
    border-radius: 5px;
    box-shadow: 0px 10px 10px -5px black;
  a:hover
    box-shadow: 0px 0px 2px 2px $main-color;
    cursor: pointer;
  
#game
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  &-wrap
      flex: 1;
      overflow: hidden;
    img
      width: 100%;
    img
      box-shadow: none;
      cursor: pointer;
  
#games .fake
    margin: 10px;
    flex: 1 0 auto;
    align-self: stretch;
    width: 150px;

#game-title
  padding: 5px 0 0 0;
  width: 100%;
  height: 30px;
  font-size: 0.4em;
  text-align: center;
  text-transform: uppercase;
  color: white;
  font-weight: bold;
#game-title:hover
    box-shadow: none;
    cursor: pointer;

#game-info
    flex-algin: flex-end;
    padding: 5px;
    font-size: 0.4em;
    color: white;
    font-weight: lighter;
#game-info:hover
    box-shadow: none;
    cursor: pointer;