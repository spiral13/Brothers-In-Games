#game
  width: 13%
  margin: 0 1em
  height: 10em
  display: flex
  flex-direction: column
  justify-content: space-between
  border-radius: 5px
  border: 2px solid #EC9C34
  box-shadow: 0px 10px 10px -5px black


#gamePicture
  width: 100%
  height: 60%
  background-color: white


#gameTitle
  font-size: 0.8em;
  padding-bottom: 10px
  text-align: center
  text-transform: uppercase
  color: white
  font-weight: bold

#gameInfo
  font-size: 0.4em;
  padding: 1em
  color: white
  font-weight: lighter
