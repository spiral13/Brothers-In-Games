@require "frontend/styles/charte";

#footer
  position:relative
  margin-top: 20em
  bottom: 0
  display: flex;
  flex-direction: column
  justify-content: flex-end
  align-items: center
  text-align: center
  width: 100%
  background-color: white

#footerAllLinks
  display: flex;
  justify-content: space-around
  width:100%
  margin-top:1em
  padding-bottom:2em


#linkToMandatoryPages
  align-items: center
  text-align: center
  font-size: .5em
  display: flex;
  flex-direction: column
  justify-content: space-between
  color: $main-color
  font-weight: bold

.linkToFooterPage
  padding-top: 10px

.linkToFooterPage:hover
  color: black
  cursor: pointer

#copyright
  background-color: black
  display: inline
  padding: 10px 0
  margin-top:1em
  width: 100%
  display: flex;
  justify-content: center
  align-items: center
  text-align: center
  color: white
  font-size: .5em
