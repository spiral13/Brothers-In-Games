#MyProfileContainer
  width: 85%
  height: 100%
  display: flex
  flex-direction: column
  padding: 1em 4em


#MyProfilePresentation
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  width:400px
  margin: 1em auto 1em
  padding:1em
  background-color: #EC9C34
  border-radius: 10px

#MyProfilePhoto
  width: 100px
  height: 100px
  border-radius: 100%
  margin-bottom: 1em

#MyProfileDescription
  opacity: .6
  font-size: .7em


#settingsForMyProfileTrigger
  position: relative
  color: #EC9C34
  top: -10px
  left:900px
  width: 70px

#settingsForMyProfileTrigger:hover
  color: black
  cursor: pointer
  box-shadow: 0px 0px 2px 2px #ec9c34

.MyProfileSectionIcon
  margin: .5em auto
  color: #EC9C34


#AddOrDeleteFriendFromMyProfile
  display: flex;
  margin: .5em auto
  width: 500px;

.FriendsFromMyProfile
  width: 50%
  border-radius: 10px
  height: 100px;
  padding:10px;
  button
    margin-top: 10px;
    padding: 5px;
    border-radius: 4px;
    color: #ec9c34;
    font-weight: bold;
    background-color: #000;
  button:hover
    color: #000;
    background-color: #ec9c34;
    border: 2px solid #fff;
    cursor: pointer;

#DeleteFriendFromMyProfile
  font-size: 0.6em;
  height: 50px;

.addFriendInput {
  border-radius: 3px;
  border: none;
  width: 100%;
  padding: 10px;
}
