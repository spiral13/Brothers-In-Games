@require "frontend/styles/charte";

#MyProfileContainer
  width: 50%
  height: 100%
  display: flex
  align-items: baseline
  flex-direction: column
  padding: 1em



#MyProfilePresentation
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  width:400px
  margin: 1em auto 1em
  padding:1em
  background-color: $main-color
  border-radius: 10px

#MyProfilePhoto
  width: 100px
  height: 100px
  border-radius: 100%
  margin-bottom: 1em
  width: 150px;
  height: auto;

#MyProfileDescription
  opacity: .6
  font-size: .7em


#settingsForMyAccountTrigger
  position: absolute
  display: flex
  flex-direction: column
  align-items: center
  margin-left: 24em
  margin-top: 1em
  align-self: flex-end
  width: 650px
  height:80%
  color: white
  border-left: dotted  white
  border-left-width: 2px 10px


#labelMyAccountTrigger
  font-size: .7em

#FaWrenchMyAccountTrigger
  border-radius: 0 0 100% 100%
  background-color: #2C2C2C;
  width:50px
  height:40px
  text-align: center
  justify-content: center
  margin-top: 1em
  margin-bottom: 5.3em

#FaWrenchMyAccountTrigger:hover
  color: #2C2C2C;
  background-color: $main-color
  cursor: pointer



#settingsForMyProfileTrigger
  position: absolute
  display: flex
  justify-content: space-between
  margin-left: 6.2em
  margin-top: 1em
  align-self: center
  width: 50px
  color: #2C2C2C;

#settingsForMyProfileTrigger:hover
  color: white
  cursor: pointer

.MyProfileSectionIcon
  margin: .5em auto
  color: $main-color

.MyAccountSectionIcon
  margin: .5em auto
  color: white


#AddOrDeleteFriendFromMyProfile
  display: flex;
  margin: .5em auto
  width: 500px

.FriendsFromMyProfile
  width: 50%
  border-radius: 10px
  height: 100px
  padding:10px
  button
    margin-top: 10px
    padding: 5px
    border-radius: 4px
    color: $main-color
    font-weight: bold
    background-color: #000
  button:hover
    color: #000
    background-color: $main-color
    border: 2px solid #fff
    cursor: pointer

#DeleteFriendFromMyProfile
  font-size: 0.5em
  height: 50px

#AddFriendFromMyProfile
  height: 50px


.addFriendInput {
  border-radius: 3px
  border: none
  width: 100%
  height: 127%
  padding: 10px
  font-size: 0.5em
  font-weight: bold
}

#crossCancelSettingsForm
  color: $main-color

@media (max-width: 1024px)
  #MyProfileContainer
    width: 100vw

  #settingsForMyAccount
    width: 700px
    height: 700px
    margin-left: 28em
    margin-top: 5em
    background-color: white
    border: thick double #EC9C34
    border-radius: 10px
    padding: 1em 2em
    z-index:5

  #settingsForMyAccountTrigger
    display: flex
    flex-direction: column
    align-items: center
    margin-top: 1em
    align-self: flex-end
    width: 650px
    height:80%
    color: white
    border-top: dotted  white
    border-top-width: 2px 10px

  #settingsForMyProfileTrigger
    position: absolute
    display: flex
    justify-content: space-between
    margin-top: 1em
    align-self: center
    width: 50px
    color: #2C2C2C;
