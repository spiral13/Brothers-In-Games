#settingsForMyAccount
  position: absolute
  align-self: flex-end
  width: 700px
  height: 700px
  margin-left: 28em
  margin-top: 5em
  background-color: white
  border: thick double #EC9C34
  border-radius: 10px
  padding: 1em 2em
  z-index:5

#MyAccount
  display: flex
  flex-wrap: wrap


#changeYourInformation
  font-size: 1em
  font-weight: bold

.settingsInputs
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: flex-start
  flex-wrap: wrap
  margin: 3em 0


.label
  color: black
  width:20%
  padding-top: 1em
  margin-bottom: 1em
  font-size: .8em


.inputSettings
  width:65%
  padding: 1em 2em
  margin-bottom: 1em
  background-color: black
  color: white
  opacity:.8
  font-size: .8em
  border-radius: 10px

#confirmInformationButton
  width:60%
  margin-top: 3em
  height:3em
  color: #EC9C34
  font-weight: bold
  background-color: black
  border: thick double #EC9C34
  text-transform: uppercase

#confirmInformationButton:hover
  color: black
  background-color: #ec9c34
  border: 2px solid white
  cursor: pointer
  box-shadow: 0px 0px 2px 2px black

@media (max-width: 1024px)
  #settingsForMyAccount
    position:absolute
    width: 700px
    height: 700px
    background-color: white
    border: thick double #EC9C34
    border-radius: 10px
    padding: 1em 2em
    z-index:5
