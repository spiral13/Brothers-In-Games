.containerArticle
  background-color: #2C2C2C
  padding: 2em
  margin: auto


.article
  background-color: #2C2C2C
  background-size: auto
  height: 100%
  margin: auto;

.containerH1etImageArticle
  margin: auto;

.categorie
  z-index: 3;
  color: white
  width: 70px
  position: relative
  right: 20px;
  top: 20px;
  font-size: 0.6em
  background-color: #EC9C34
  padding: 7px

.title
  z-index: 3
  color: #EC9C34
  position: absolute
  width: 754.38px
  background-color: black
  opacity: 0.7
  top: 344px
  padding: 7px

.imageArticle
  z-index: 2
  width: 754.38px
  height: 10em
  position: relative

.publicationDate
  display: block
  width: 754.38px
  font-size: 0.4em
  text-align: right
  color: grey


// Le contenu texte de l'article

.contenuArticle
  width: 754.38px
  padding-top: 30px;
  color: white


.texteArticle
  max-width: 100%
  font-weight: lighter
  padding-bottom: 2em
  font-size: 0.6em
  line-height: 1.8em



// Articles annexes
aside
  padding-top: 4em
  width: 754.38px
  height: 10em


aside h2
  text-align: center
  padding-bottom: 1em
  color: #EC9C34
  font-size: 0.7em
  font-weight: lighter


.carousel
  display: flex
  flex-direction: row
  justify-content: space-between
  text-align: center

.unArticleCarousel
  width: 150px
  height: 180px
  color: #EC9C34
  font-size: 0.5em

.unArticleCarousel:hover
  box-shadow: 0px 0px 2px 2px #ec9c34;
  cursor: pointer;

.imageCarouselArticle
  width: 150px
  height: 150px
  padding-bottom: .5em

@media screen and (max-width: 800px) {
  .containerArticle {
    padding-left: 10px;
    padding-right: 10px;
  }

  .categorie {
    top: 0px
    right: 0px
  }

  .publicationDate, .contenuArticle, .imageArticle, .title {
    width: 600px;
  }

  .texteArticle {
    line-height: 2em;
    font-weight: lighter;
  }
}

@media screen and (max-width: 600px) {

    .categorie {
      top: 0px
      right: 0px
    }

    .publicationDate, .contenuArticle, .imageArticle, .title {
      max-width: 400px;
    }

    .title {
      position: inherit;
      background: none;
      opacity: inherit;
      padding: inherit;
    }

    #linkToMandatoryPages {
      margin-bottom: 10px
    }
}
