/**
 * Article principal
 */
.article
  width: 85%
  float: right
  background-color: #2C2C2C
  height: 100vh
  padding: .5em
  overflow: auto;

.imageArticle
  width: 100%
  height: 10em

.contenuArticle
  display: flex
  flex-direction: column
  justify-content: flex-start

  /**
   * Carousel
   */

.carousel
  display: flex
  flex-direction: row


.unArticleCarousel
  display: flex
  flex-direction: column
  justify-content: flex-start
  width: 7em
  height: 7em

  &:hover{
    box-shadow: 0px 0px 2px 2px #ec9c34;
    cursor: pointer;
  }


.imageCarouselArticle
  width: 100%
  height: 60%
